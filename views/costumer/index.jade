extends ../layout
block modals
    include create
    include edit
block content
    .panel
        .panel-header
        .panel-body
            .form-body.pal
                .row
                    .col-md-12
                        button.btn.btn-success(data-target='#registerCostumerModal',data-toggle='modal')
                            i.fa.fa-plus
                            |  Nuevo
                        .table-responsive
                            hr
                            table#table_costumer.table.table-hover.table-striped.table-bordered.table-advanced.tablesorter.display.dataTable.no-footer
                                thead
                                    th #
                                    th Nombre
                                    th Apellido
                                    th DNI
                                    th Rol
                                    th Telefono
                                    th Email
                                    th Fecha
                                    th Acciones
                                tbody
                                    each costumer in costumers
                                        tr
                                            td=costumer.id
                                            td=costumer.name
                                            td=costumer.lastname
                                            td=costumer.dni
                                            td=costumer.role
                                            td=costumer.phone
                                            td=costumer.email
                                            td=costumer.register_date_person
                                            td
                                                button#btnEditCostumer.btn.btn-info.btn-xs(type='button',data-toggle='modal',href='#editCostumerModal',data-id=costumer.id)
                                                    |Editar
block scripts
    script(src='/javascripts/costumer/costumer.js')
